# 2D Poiseuille flow validation
units           lj
dimension       2
boundary        p f p
atom_style      atomic

region          box block 0.0 4.0 0.0 32.0 -0.5 0.5
create_box      1 box
create_atoms    1 single 2.0 16.0 0.0
mass            1 1.0
group           fluid empty
pair_style      none
timestep        1.0

fix  flow all couplb 4 32 1 0.1 1.0 &
     wall_y 1 1 &
     gravity 1e-5 0.0 0.0 &
     output 2000 couplb_poiseuille.dat &
     check_every 1000

thermo          2000
thermo_style    custom step cpu
run             20000
print "=== Poiseuille test done ==="
